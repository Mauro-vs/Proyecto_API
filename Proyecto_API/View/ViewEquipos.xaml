<UserControl x:Class="Proyecto_API.View.ViewEquipos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Proyecto_API.View"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="#121212" Foreground="White">
    <UserControl.Resources>
        <SolidColorBrush x:Key="AccentRed" Color="#D50000"/>

        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse x:Name="bg" Fill="{TemplateBinding Background}" Width="40" Height="40"/>
                            <TextBlock Text="⬅" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                       FontSize="18" Foreground="{TemplateBinding Foreground}" Margin="0,-2,0,0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Fill" Value="{StaticResource AccentRed}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TeamCardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Width" Value="320"/>
            <Setter Property="Height" Value="220"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#252525" Offset="0"/>
                        <GradientStop Color="#151515" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="5" Opacity="0.3" Color="Black"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5, 0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource AccentRed}"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.03" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.03" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.15"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.15"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="30,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Style="{StaticResource BackButtonStyle}" Click="BtnVolver_Click"/>

            <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Center">
                <TextBlock Text="EQUIPOS 2026" FontFamily="Segoe UI Black" FontSize="28" Foreground="White"/>
                <Rectangle Width="40" Height="4" Fill="{StaticResource AccentRed}" HorizontalAlignment="Left" Margin="0,5,0,0"/>
            </StackPanel>

            <Border Grid.Column="2" Background="#202020" CornerRadius="20" Width="280" Height="40" BorderBrush="#333" BorderThickness="1">
                <Grid Margin="15,0">
                    <TextBlock Text="🔍  Buscar equipo..." VerticalAlignment="Center" Foreground="#555" IsHitTestVisible="False"/>
                    <TextBox Background="Transparent" BorderThickness="0" Foreground="White" VerticalAlignment="Center" FontSize="14" CaretBrush="Red"/>
                </Grid>
            </Border>
        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">

                <Border Style="{StaticResource TeamCardStyle}">
                    <Grid ClipToBounds="True">
                        <TextBlock Text="LCR" FontFamily="Segoe UI Black" FontSize="120" Foreground="#333" Opacity="0.2"
                                   HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,-10,-20" IsHitTestVisible="False"/>

                        <Rectangle Width="6" HorizontalAlignment="Left" Fill="#FF9900" RadiusX="2" RadiusY="2" Margin="0,10"/>

                        <StackPanel Margin="25,20,20,15">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <Border Background="#333" CornerRadius="4" Padding="6,2" VerticalAlignment="Center" Margin="0,0,10,0">
                                    <TextBlock Text="JPN" Foreground="#AAA" FontSize="10" FontWeight="Bold"/>
                                </Border>
                                <TextBlock Text="1996" Foreground="#666" FontSize="12" VerticalAlignment="Center"/>
                            </StackPanel>

                            <TextBlock Text="LCR HONDA" Foreground="White" FontFamily="Segoe UI Black" FontSize="24"/>

                            <Rectangle Height="1" Fill="#333" Margin="0,10"/>

                            <StackPanel>
                                <TextBlock Text="PILOTOS:" Foreground="#888" FontSize="10" FontWeight="Bold" Margin="0,0,0,5"/>

                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="• Johann" Foreground="#AAA" FontSize="13" Margin="0,0,5,0"/>
                                    <TextBlock Text="ZARCO" Foreground="White" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="• Takaaki" Foreground="#AAA" FontSize="13" Margin="0,0,5,0"/>
                                    <TextBlock Text="NAKAGAMI" Foreground="White" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="• Somkiat" Foreground="#AAA" FontSize="13" Margin="0,0,5,0"/>
                                    <TextBlock Text="CHANTRA" Foreground="White" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,15,0,0">
                                <TextBlock Text="Chassis:" Foreground="#666" FontSize="11" Margin="0,0,5,0"/>
                                <TextBlock Text="Honda RC212V" Foreground="#FF9900" FontSize="11" FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Style="{StaticResource TeamCardStyle}">
                    <Grid ClipToBounds="True">
                        <TextBlock Text="DUC" FontFamily="Segoe UI Black" FontSize="120" Foreground="#333" Opacity="0.2"
                                   HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,-10,-20"/>
                        <Rectangle Width="6" HorizontalAlignment="Left" Fill="#D50000" RadiusX="2" RadiusY="2" Margin="0,10"/>

                        <StackPanel Margin="25,20,20,15">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <Border Background="#333" CornerRadius="4" Padding="6,2" VerticalAlignment="Center" Margin="0,0,10,0">
                                    <TextBlock Text="ITA" Foreground="#AAA" FontSize="10" FontWeight="Bold"/>
                                </Border>
                                <TextBlock Text="2003" Foreground="#666" FontSize="12" VerticalAlignment="Center"/>
                            </StackPanel>

                            <TextBlock Text="DUCATI LENOVO" Foreground="White" FontFamily="Segoe UI Black" FontSize="24"/>
                            <Rectangle Height="1" Fill="#333" Margin="0,10"/>

                            <StackPanel>
                                <TextBlock Text="PILOTOS:" Foreground="#888" FontSize="10" FontWeight="Bold" Margin="0,0,0,5"/>
                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="• Pecco" Foreground="#AAA" FontSize="13" Margin="0,0,5,0"/>
                                    <TextBlock Text="BAGNAIA" Foreground="White" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="• Marc" Foreground="#AAA" FontSize="13" Margin="0,0,5,0"/>
                                    <TextBlock Text="MARQUEZ" Foreground="White" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,20,0,0">
                                <TextBlock Text="Chassis:" Foreground="#666" FontSize="11" Margin="0,0,5,0"/>
                                <TextBlock Text="Desmosedici GP26" Foreground="#D50000" FontSize="11" FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Style="{StaticResource TeamCardStyle}">
                    <Grid ClipToBounds="True">
                        <TextBlock Text="APR" FontFamily="Segoe UI Black" FontSize="120" Foreground="#333" Opacity="0.2"
                                   HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,-10,-20"/>
                        <Rectangle Width="6" HorizontalAlignment="Left" Fill="Purple" RadiusX="2" RadiusY="2" Margin="0,10"/>

                        <StackPanel Margin="25,20,20,15">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <Border Background="#333" CornerRadius="4" Padding="6,2" VerticalAlignment="Center" Margin="0,0,10,0">
                                    <TextBlock Text="ITA" Foreground="#AAA" FontSize="10" FontWeight="Bold"/>
                                </Border>
                            </StackPanel>

                            <TextBlock Text="APRILIA RACING" Foreground="White" FontFamily="Segoe UI Black" FontSize="24"/>
                            <Rectangle Height="1" Fill="#333" Margin="0,10"/>

                            <StackPanel>
                                <TextBlock Text="PILOTOS:" Foreground="#888" FontSize="10" FontWeight="Bold" Margin="0,0,0,5"/>
                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="• Jorge" Foreground="#AAA" FontSize="13" Margin="0,0,5,0"/>
                                    <TextBlock Text="MARTIN" Foreground="White" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="• Marco" Foreground="#AAA" FontSize="13" Margin="0,0,5,0"/>
                                    <TextBlock Text="BEZZECCHI" Foreground="White" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,20,0,0">
                                <TextBlock Text="Chassis:" Foreground="#666" FontSize="11" Margin="0,0,5,0"/>
                                <TextBlock Text="Aprilia RS-GP" Foreground="Purple" FontSize="11" FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

            </WrapPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
