<UserControl x:Class="Proyecto_API.View.ViewCalendario"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Proyecto_API.View"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="#121212" Foreground="White">
    <UserControl.Resources>
        <SolidColorBrush x:Key="AccentRed" Color="#D50000"/>

        <Style x:Key="EventTicketStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#252525"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Color="Black" Opacity="0.5"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse x:Name="bg" Fill="{TemplateBinding Background}" Width="36" Height="36"/>
                            <TextBlock Text="⬅" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                       FontSize="16" Foreground="{TemplateBinding Foreground}" Margin="0,-2,0,0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Fill" Value="{StaticResource AccentRed}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="40,30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Style="{StaticResource BackButtonStyle}" Click="BtnVolver_Click"/>
            <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Center">
                <TextBlock Text="TEMPORADA 2026" FontFamily="Segoe UI" FontWeight="Light" FontSize="14" Foreground="#888"/>
                <TextBlock Text="CALENDARIO" FontFamily="Segoe UI Black" FontSize="32" Foreground="White"/>
            </StackPanel>
        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,0,15,0">

                <Border Style="{StaticResource EventTicketStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="{StaticResource AccentRed}" CornerRadius="8,0,0,8">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="08" Foreground="White" FontFamily="Segoe UI Black" FontSize="26" LineHeight="26"/>
                                <TextBlock Text="MAR" Foreground="White" FontSize="12" FontWeight="Bold" Opacity="0.9" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20,0">
                            <Border Background="#333" HorizontalAlignment="Left" CornerRadius="3" Padding="6,2" Margin="0,0,0,5">
                                <TextBlock Text="RONDA 01" Foreground="#AAA" FontSize="9" FontWeight="Bold"/>
                            </Border>

                            <TextBlock Text="QATAR AIRWAYS GRAND PRIX" FontFamily="Segoe UI Black" FontSize="18" Foreground="White"/>
                            <TextBlock Text="Lusail International Circuit" Foreground="#888" FontSize="13" Margin="0,2,0,0"/>
                        </StackPanel>

                        <Border Grid.Column="2" BorderBrush="#333" BorderThickness="1,0,0,0">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="QAT" FontFamily="Segoe UI Black" FontSize="20" Foreground="#333"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <Border Style="{StaticResource EventTicketStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#333" CornerRadius="8,0,0,8">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="22" Foreground="White" FontFamily="Segoe UI Black" FontSize="26" LineHeight="26"/>
                                <TextBlock Text="MAR" Foreground="#AAA" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20,0">
                            <Border Background="#333" HorizontalAlignment="Left" CornerRadius="3" Padding="6,2" Margin="0,0,0,5">
                                <TextBlock Text="RONDA 02" Foreground="#AAA" FontSize="9" FontWeight="Bold"/>
                            </Border>
                            <TextBlock Text="GRANDE PRÉMIO DE PORTUGAL" FontFamily="Segoe UI Black" FontSize="18" Foreground="White"/>
                            <TextBlock Text="Autódromo Internacional do Algarve" Foreground="#888" FontSize="13" Margin="0,2,0,0"/>
                        </StackPanel>

                        <Border Grid.Column="2" BorderBrush="#333" BorderThickness="1,0,0,0">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="POR" FontFamily="Segoe UI Black" FontSize="20" Foreground="#333"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <Border Style="{StaticResource EventTicketStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#333" CornerRadius="8,0,0,8">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="27" Foreground="White" FontFamily="Segoe UI Black" FontSize="26" LineHeight="26"/>
                                <TextBlock Text="ABR" Foreground="#AAA" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20,0">
                            <Border Background="#333" HorizontalAlignment="Left" CornerRadius="3" Padding="6,2" Margin="0,0,0,5">
                                <TextBlock Text="RONDA 04" Foreground="#AAA" FontSize="9" FontWeight="Bold"/>
                            </Border>
                            <TextBlock Text="GRAN PREMIO DE ESPAÑA" FontFamily="Segoe UI Black" FontSize="18" Foreground="White"/>
                            <TextBlock Text="Circuito de Jerez – Ángel Nieto" Foreground="#888" FontSize="13" Margin="0,2,0,0"/>
                        </StackPanel>

                        <Border Grid.Column="2" BorderBrush="#333" BorderThickness="1,0,0,0">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="ESP" FontFamily="Segoe UI Black" FontSize="20" Foreground="#333"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
