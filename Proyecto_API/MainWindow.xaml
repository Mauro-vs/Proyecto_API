<Window x:Class="Proyecto_API.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MotoGP Dashboard" Height="800" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="#121212" Foreground="White">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="0">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#1E1E1E" BorderBrush="#333" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" Margin="30,0" VerticalAlignment="Center">
                <Image Source="/assets/motogp_logo.png" Height="98" Width="214"/>
                <TextBlock Text="OFFICIAL STATS HUB" Foreground="Gray" FontWeight="Bold" Margin="20,0,0,0" VerticalAlignment="Center" FontSize="22"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Grid.Row="0" Grid.Column="0" Margin="10" Background="Black" Click="ButtonPilotos_Click">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image Grid.Column="1" Source="/assets/pilotos.webp" Stretch="UniformToFill" Opacity="0.7"/>

                    <Border Grid.Column="0" Background="#202020" BorderBrush="#D50000" BorderThickness="4,0,0,0">
                        <TextBlock Text="PILOTOS" Foreground="White" FontSize="28" FontWeight="Black" FontFamily="Segoe UI Black"
                                   HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock.LayoutTransform>
                                <RotateTransform Angle="-90"/>
                            </TextBlock.LayoutTransform>
                        </TextBlock>
                    </Border>
                </Grid>
            </Button>

            <Button Grid.Row="0" Grid.Column="1" Margin="10" Background="Black" Click="ButtonEquipos_Click">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image Grid.Column="1" Source="/assets/equipos.webp" Stretch="UniformToFill" Opacity="0.7"/>

                    <Border Grid.Column="0" Background="#202020" BorderBrush="#D50000" BorderThickness="4,0,0,0">
                        <TextBlock Text="EQUIPOS" Foreground="White" FontSize="28" FontWeight="Black" FontFamily="Segoe UI Black"
                                   HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock.LayoutTransform>
                                <RotateTransform Angle="-90"/>
                            </TextBlock.LayoutTransform>
                        </TextBlock>
                    </Border>
                </Grid>
            </Button>

            <Button Grid.Row="1" Grid.Column="0" Margin="10" Background="Black" Click="ButtonCircuitos_Click">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image Grid.Column="1" Source="/assets/circutios.jpg" Stretch="UniformToFill" Opacity="0.7"/>

                    <Border Grid.Column="0" Background="#202020" BorderBrush="#D50000" BorderThickness="4,0,0,0">
                        <TextBlock Text="CIRCUITOS" Foreground="White" FontSize="28" FontWeight="Black" FontFamily="Segoe UI Black"
                                   HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock.LayoutTransform>
                                <RotateTransform Angle="-90"/>
                            </TextBlock.LayoutTransform>
                        </TextBlock>
                    </Border>
                </Grid>
            </Button>

            <Button Grid.Row="1" Grid.Column="1" Margin="10" Background="Black" Click="ButtonCalendario_Click">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image Grid.Column="1" Source="/assets/calendario.webp" Stretch="UniformToFill" Opacity="0.7"/>

                    <Border Grid.Column="0" Background="#202020" BorderBrush="#D50000" BorderThickness="4,0,0,0">
                        <TextBlock Text="CALENDARIO" Foreground="White" FontSize="28" FontWeight="Black" FontFamily="Segoe UI Black"
                                   HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock.LayoutTransform>
                                <RotateTransform Angle="-90"/>
                            </TextBlock.LayoutTransform>
                        </TextBlock>
                    </Border>
                </Grid>
            </Button>
        </Grid>
    </Grid>
</Window>